    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        { 
            "type": "node",
            "request": "launch",
            "name": "Launch Test",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
             "runtimeArgs": [
             // "debug",
             // "--break",
             "${file}"
             ],
             "port": 9229,
             "outputCapture": "std",
             "skipFiles": [
             "<node_internals>/**/*.js"
             ]
             }

    ]
}
